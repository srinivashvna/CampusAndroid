<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_16sdp"
    android:paddingLeft="@dimen/_16sdp"
    android:paddingRight="@dimen/_16sdp"
    android:paddingTop="@dimen/_16sdp"
    tools:context="com.campuz.base.LoginActivity"
    tools:ignore="MissingPrefix">


    <TextView
        android:id="@+id/titel"
        fontPath="fonts/Roboto-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_97sdp"
        android:text="@string/app_name"
        android:textColor="@color/dullgrey"
        android:textSize="@dimen/_37ssp" />

    <EditText
        android:id="@+id/email"
        fontPath="fonts/Roboto-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/titel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="@drawable/rounded_border_edittext"
        android:drawableStart="@drawable/username"
        android:gravity="center"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_30sdp"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/password"
        fontPath="fonts/Roboto-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/email"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/rounded_border_edittext"
        android:drawableStart="@drawable/pwd"
        android:gravity="center"
        android:hint="@string/prompt_password"
        android:imeActionId="6"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_30sdp"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/email_sign_in_button"
        fontPath="fonts/Roboto-Regular.ttf"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/rounded_border_button"
        android:text="@string/action_sign_in"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/copyright"
        android:textColor="@color/dullgrey" />


</RelativeLayout>
