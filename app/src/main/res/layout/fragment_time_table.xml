<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.campuz.parentfragments.ParentTimeTableFragment"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/title"
        fontPath="fonts/Roboto-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_5sdp"
        android:text="@string/campuzschool"
        android:textColor="@color/dullgrey"
        android:textSize="@dimen/_20ssp" />

    <TextView
        android:id="@+id/timetable"
        fontPath="fonts/Roboto-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_5sdp"
        android:text="@string/timetable"
        android:textColor="@color/appblue"
        android:textSize="@dimen/_37ssp" />

    <TextView
        android:id="@+id/select"
        fontPath="fonts/Roboto-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timetable"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_toStartOf="@+id/title"
        android:text="@string/selectdate"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select"
        android:layout_alignStart="@+id/title"
        android:background="@drawable/rounded_border_edittext"
        android:ems="10"
        fontPath="fonts/Roboto-Regular.ttf"
        android:drawableLeft="@drawable/dairyreports"
        android:inputType="textPersonName"
        android:text="" />


    <ListView
        android:id="@+id/listview_timetable"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/editTextDate"
        android:layout_margin="@dimen/_5sdp"
        android:divider="@color/track"
        android:dividerHeight="@dimen/_1sdp" />

</RelativeLayout>
